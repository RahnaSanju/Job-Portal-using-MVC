@model ProjectMVC.Models.InsertApplicationCls
@{
    ViewBag.Title = "InsertCV_Load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Job Application</h2>

<div>
    @using (Html.BeginForm("ApplyCV_Click", "InsertCV", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div><label>Upload Resume</label></div>
        <div>
            @Html.TextBox("file", "", new { Type = "file" })
        </div>

        <div>
            <input type="submit" value="Insert" />
            @Html.DisplayFor(m => m.msg)
        </div>
        <div>
            @Html.ActionLink("Go Back to Home Page", "UserHome", "LoginDB")
        </div>
    }


</div>

